    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "mix_task",
            "name": "Debug as server",
            "request": "launch",
            "task": "run",
            "taskArgs": [
                "phx.server",
                "--trace"
            ],
            "startApps": false,
            "projectDir": "${workspaceRoot}"
        },
        {
            "type": "mix_task",
            "name": "Run as testing suite",
            "request": "launch",
            "task": "test",
            "taskArgs": [
                "--trace"
            ],
            "projectDir": "${workspaceRoot}",
            "requireFiles": [
                "test/**/test_helper.exs",
                "test/**/*_test.exs"
            ]
        }
    ]
}